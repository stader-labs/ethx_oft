{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "preinstall",
            "type": "shell",
            "command": "forge install",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "install",
            "type": "shell",
            "command": "npm ci --frozen-lockfile",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "preinstall",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "fmt",
            "type": "shell",
            "command": "forge fmt --check",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "install",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "npm run lint:sol",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "fmt",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "forge build --sizes",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "lint",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "forge test -v",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "lint",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "coverage",
            "type": "shell",
            "command": "forge coverage",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "lint",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "gas",
            "type": "shell",
            "command": "forge test --gas-report",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "lint",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "slither",
            "type": "shell",
            "command": "slither . --exclude-dependencies --exclude-info",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "lint",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "deployproxyadmin",
            "type": "shell",
            "command": "forge script ./script/OFT.s.sol --sig 'deployAdmin()' --slow --broadcast --rpc-url ${ARS_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ARBISCAN_API_KEY} --verifier-url https://api-sepolia.arbiscan.io/api --verify",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "ETHX_ADMIN": "0x2E1F5C7f87096fb7FfFbB6654Fc3b2CE303aEff5",
                }
            },
            "dependsOn": "test",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "deployethx",
            "type": "shell",
            "command": "forge script ./script/DeployETHx.s.sol --sig 'deployProxy()' --broadcast --slow --rpc-url ${ARS_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ARBISCAN_API_KEY} --verifier-url https://api-sepolia.arbiscan.io/api --verify",
            "options": {
                "cwd": "${workspaceFolder}",
