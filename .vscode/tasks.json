{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "preinstall",
            "type": "shell",
            "command": "forge install",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "install",
            "type": "shell",
            "command": "npm ci --frozen-lockfile",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "preinstall",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "fmt",
            "type": "shell",
            "command": "forge fmt --check",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "install",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "npm run lint:sol",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "fmt",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "forge build --sizes",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "lint",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "forge test -v",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "lint",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "coverage",
            "type": "shell",
            "command": "forge coverage",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "lint",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "gas",
            "type": "shell",
            "command": "forge test --gas-report",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "lint",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "slither",
            "type": "shell",
            "command": "slither . --exclude-dependencies --exclude-info",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "lint",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "deployethx",
            "type": "shell",
            "command": "forge script ./script/DeployETHx.s.sol --sig 'deployProxy()' --broadcast --rpc-url ${ARS_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ARBISCAN_API_KEY} --verifier-url https://api.arbiscan.io/api --verify",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "ETHX_ADMIN": "0x2E1F5C7f87096fb7FfFbB6654Fc3b2CE303aEff5",
                }
            },
            "dependsOn": "test",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "deployethximplementation",
            "type": "shell",
            "command": "forge script ./script/DeployETHx.s.sol --sig 'deployImplementation()' --broadcast --rpc-url ${ARS_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ARBISCAN_API_KEY} --verifier-url https://api.arbiscan.io/api --verify",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "ETHX_ADMIN": "0x2E1F5C7f87096fb7FfFbB6654Fc3b2CE303aEff5",
                }
            },
            "dependsOn": "test",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "setupethxgrants",
            "type": "shell",
            "command": "forge script ./script/DeployETHx.s.sol --sig 'setupGrants()' --slow --broadcast --rpc-url ${ARS_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "ETHX": "0xA2FA067965488B2a67ba11B021Be53BeB579a32E",
                    "ETHX_ADMIN": "0x2E1F5C7f87096fb7FfFbB6654Fc3b2CE303aEff5",
                }
            },
            "dependsOn": "test",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "deployoft",
            "type": "shell",
            "command": "forge script ./script/OFT.s.sol --sig 'deploy()' --slow --broadcast --rpc-url ${ARS_URL} --private-key ${PRIVATE_KEY} --etherscan-api-key ${ETHERSCAN_API_KEY} --verify",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "ETHX": "0xA2FA067965488B2a67ba11B021Be53BeB579a32E",
                    "LZ_ENDPOINT": "0x6edce65403992e310a62460808c4b910d972f10f",
                    "DELEGATE": "0x2E1F5C7f87096fb7FfFbB6654Fc3b2CE303aEff5",
                }
            },
            "dependsOn": "test",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
    ]
}