        {
            "label": "oftsetpeer",
            "type": "shell",
            "command": "forge script ./script/OFT.s.sol --sig 'setPeer()' --slow --broadcast --rpc-url ${ARS_URL} --private-key ${PRIVATE_KEY}",
            "options": {
                "cwd": "${workspaceFolder}",
