            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PROXY_ADMIN": "0x3d86FA998c2709A7ae3ae4FB7a69b7CD7009d08f",
                    "ETHX": "0x52312ea29135A468417F0C71d6A75CfEA75351b7",
